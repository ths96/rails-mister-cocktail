<div class="banner">
  <div class="banner-content">
    <h1> Fancy AF Cocktails</h1>
    <p> We serve cocktails, that are fancy </p>
    <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail|  %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
